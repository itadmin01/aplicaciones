<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="res_config_settings_view_form_attendance" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.attendance</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_attendance.res_config_settings_view_form"/>
        <field name="arch" type="xml">
        	<xpath expr="//div[hasclass('settings')]" position="inside">
        		<div class="app_settings_block" data-string="Attendances" string="Attendances" data-key="hr_attendance">
	        		<h2>Reporte De Asistencia</h2>
	        		<div class="col-xs-12 col-md-6 o_setting_box">
	                    <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                        	<div class="content-group">
                                <div class="row mt16">
                                  <label for="periodo" class="col-md-5"/>
                                  <span class="col-md-5"><field name="periodo"/></span>
                                </div>
                                <div class="row mt16">
                                  <label for="horas_minimo_por_dia" class="col-md-5"/>
                                  <span class="col-md-5"><field name="horas_minimo_por_dia"/></span>
                                </div>
                                <div class="row mt16">
                                  <label for="dia_laborado" class="col-md-5"/>
                                  <span class="col-md-5"><field name="dia_laborado"/></span>
                                </div>
                                <div class="row mt16">
                                  <label for="registros_de_asistencia" class="col-md-5"/>
                                  <span class="col-md-5"><field name="registros_de_asistencia"/></span>
                                </div>
                            </div>
                        </div>
	                </div>
	        	</div>
        	</xpath>
        </field>
    </record>
</odoo>
